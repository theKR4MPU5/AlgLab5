<Window x:Class="AlgLab5.SetPathCostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgLab5"
        mc:Ignorable="d"
        Title="SetPathCostWindow" Height="184" Width="216" Background="#222831">
    <Grid>
        <Label x:Name="EnterPathCost" Content="Введите стоимость" HorizontalAlignment="Center" Margin="0,7,0,0" VerticalAlignment="Top" Width="120" Foreground="White"/>
        <TextBox x:Name="SetPathCost" HorizontalAlignment="Center" Margin="0,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="SetPathCost_TextChanged" Background="#393E46" Foreground="White"/>

        <Button x:Name="ConfrimAddPathCostButton" Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="120" IsCancel="True" Margin="0,73,0,0" Click="ConfrimAddPathCostButton_Click" Background="#00ADB5" Foreground="White"/>
    </Grid>
</Window>
